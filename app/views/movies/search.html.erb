<%= form_tag(movie_search_path, method: :get) do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @movies.present? %>
  <h1>Movies Found</h1>
  <ul>
    <% @movies.each do |movie| %>

      <%= form_for Favourite.new, url: {action: "create", controller: "favourites", remote: true} do |f| %>
        <li><%= movie['Title'] %></li>
        <%= hidden_field(:favourite, :title, :value => movie['Title']) %>
        <%= f.submit "Add to favourites" %>
      <% end %>

    <% end %>
  </ul>
  <p><%= link_to('Search again', movie_search_path) %></p>
<% end %>
